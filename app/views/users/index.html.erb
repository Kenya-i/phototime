<% provide(:title, "Users") %>
  <div class="container">
    <div class="users-name">
      <p>User</p>
      <% @users.each do |user| %>
        <div class="user">
          <%= link_to user.name, user %>
        </div>
        <div>
          <% if user.image? %>
            <%= link_to image_tag(user.image.url, class: "image-size"), user %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>