<% provide(:title, "Users") %>
  <div class="container">
    <div class="users">
      <% @users.each do |user| %>
        <div class="user">
          <%= link_to user.username, user %>
          <div>
            <% if user.image? %>
              <%= link_to image_tag(user.image.url, class: "image-size"), user_path(user) %>
            <% else %>
              <%= link_to image_tag("アイコン.jpg", class: "image-size"), user_path(user) %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>