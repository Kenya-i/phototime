<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Text&family=Dancing+Script:wght@500&family=Oswald:wght@500&family=Abril+Fatface&display=swap" rel="stylesheet">
  </head>

  <body>
    <%= render 'shared/header' %>
    <div class="main-wrapper-exterior">
      <% flash.each do |key,message|%>
        <div class="flash">
          <%= message %>
        </div>
      <% end %>
      <div class="image">
        <%= yield %>
      </div>
    </div>
    <%= render 'shared/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
